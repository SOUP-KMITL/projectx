<!doctype html>
<html>
  <head>
    <title>XWebClient<%= " | #{title}" if defined?(title) %></title>
    <link rel="stylesheet" type="text/css" href="/css/bootstrap.min.css">
    <link rel="stylesheet" type="text/css" href="/css/graph.css">
  </head>
  <body>
    <nav class="navbar navbar-default">
      <div class="container">
        <div class="navbar-header">
          <a class="navbar-brand" href="/">XWebClient</a>
        </div>
        <ul class="nav navbar-nav">
          <% if session[:user] %>
            <li class="<%= 'active' if request.path_info =~ /sessions/ %>"><a href="/sessions">Sessions</a></li>
          <% end %>
        </ul>
        <% if session[:user] %>
          <ul class="nav navbar-nav navbar-right">
            <li><a href="/signout">Sign out</a></li>
          </ul>
        <% end %>
      </div>
    </nav>
    <div class="container">
      <%= yield %>
    </div>
  </body>
</html>
